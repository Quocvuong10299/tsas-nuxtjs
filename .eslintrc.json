{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "ecmaVersion": 2019
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "process": true
  },
  "extends": [
    "plugin:nuxt/recommended",
    "eslint:recommended",
    "vue",
    "prettier",
    "plugin:vue/recommended"
  ],
  "plugins": ["eslint-plugin", "prettier"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "block-scoped-var": "error",
    "no-unused-vars": "error"
  }
}
